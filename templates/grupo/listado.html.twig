{% extends 'base.html.twig' %}

{% block body %}
    <h1>Listado de grupos</h1>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Aula</th>
                <th>Planta</th>
                <th>Tutor</th>
            </tr>
        </thead>
        <tbody>
            {% for grupo in grupos %}
                <tr>
                    <td>{{ grupo.descripcion }}</td>
                    <td>{{ grupo.aula }}</td>
                    <td>{{ grupo.planta }}</td>
                    <td>{{ grupo.tutor }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}